<%= render 'public/public', customer:@customer %>

<div class="container text-center">

<h2 class="row text-left mt-5">商品一覧(全<%= @items.count %>件)</h2>

<div class="container text-center mt-5">
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-md-3 mt-5">
      <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
      <%= link_to item.name, item_path(item), class:"text-dark font-weight-bold" %><br>
      ￥<%= item.price %>
    </div>
      <% end %>
  </div>
</div>

</div>
