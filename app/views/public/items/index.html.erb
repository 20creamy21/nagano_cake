<%= render 'public/public', customer:@customer %>

<h2>商品一覧(全<%= @items.count %>件)</h2>

<div>
  <% @items.each do |item| %>
  <div>
    <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  </div>
  <div>
    <%= link_to item.name, item_path(item) %>
  </div>
  <div>
    <%= item.price %>
  </div>
  <% end %>
</div>
