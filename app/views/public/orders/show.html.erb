<%= render 'public/public', customer:@customer %>

<h2>注文履歴詳細</h2>

<h2>注文情報</h2>
<div>
  <div>
    <div>注文日</div>
    <div><%= @order.created_at.to_s(:datetime_jp) %></div>
  </div>
  <div>
    <div>配送先</div>
    <div>
      <div><%= @customer.postal_code %></div>
      <div><%= @customer.address %></div>
    </div>
  </div>
  <div>
    <div>支払方法</div>
    <div><%= @order.payment_method %></div>
  </div>
</div>

<h2>請求情報</h2>
<div>
  <div>
    <div>商品合計</div>
    <div><%= (@order.total_payment - 800).to_i.to_s(:delimited) %></div>
  </div>
  <div>
    <div>配送料</div>
    <div><%= 800 %></div>
  </div>
  <div>
    <div>ご請求額</div>
    <div><%= @order.total_payment.to_i.to_s(:delimited) %></div>
  </div>
</div>

<h2>注文内容</h2>
<div>
  <table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |od| %>
    <tr>
      <td><%= od.item.name %></td>
      <td><%= (od.item.price * 1.1).to_i.to_s(:delimited) %></td>
      <td><%= od.amount %></td>
      <td><%= (od.item.price * 1.1 * od.amount).to_i.to_s(:delimited) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
