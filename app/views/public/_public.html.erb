<header class="border-bottom border-dark" style="padding:20px">
      <% if customer_signed_in? %>
        <ul>
          <li class="logo btn btn-outline-dark">
            <%= link_to root_path do %>
            <%= attachment_image_tag @item, :image, :fill, 30, 24, format: 'jpeg', fallback: "no_image.jpg", size:'30x24' %>
            <% end %>
          </li>
          <li>ようこそ、<%= customer.last_name %>さん！</li>
          <li class="btn btn-outline-dark">
            <%= link_to "マイページ", customers_my_page_path, class:"text-dark" %>
          </li>
          <li class="btn btn-outline-dark">
            <%= link_to "商品一覧", items_path, class:"text-dark" %>
          </li>
          <li class="btn btn-outline-dark">
            <%= link_to "カート", cart_items_path, class:"text-dark" %>
          </li>
          <li class="btn btn-outline-dark">
            <%= link_to "ログアウト", destroy_customer_session_path, method: 'delete', class:"text-dark" %>
          </li>
        </ul>
      <% else %>
        <ul>
          <li class="logo btn btn-outline-dark">
            <%= link_to root_path do %>
            <%= attachment_image_tag @item, :image, :fill, 30, 24, format: 'jpeg', fallback: "no_image.jpg", size:'30x24' %>
            <% end %>
          </li>
          <li class="btn btn-outline-dark">
            <%= link_to "About", about_path, class:"text-dark" %>
          </li>
          <li class="btn btn-outline-dark">
            <%= link_to "商品一覧", items_path, class:"text-dark" %>
          </li>
          <li class="btn btn-outline-dark">
            <%= link_to "新規登録", new_customer_registration_path, class:"text-dark" %>
          </li>
          <li class="btn btn-outline-dark">
            <%= link_to "ログイン", new_customer_session_path, class:"text-dark" %>
          </li>
        </ul>
      <% end %>
  </header>