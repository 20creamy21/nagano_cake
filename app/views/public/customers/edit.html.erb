<%= render 'public/public', customer:@customer %>

<div class="container mt-5">

  <h2 class="row">会員情報編集</h2>

  <%= form_with model: @customer, url: customers_path, local:true do |f| %>

    <div class="row mt-5">
      <div class="col-md-2">名前</div>
      <div class="col">
        <%= f.text_field :last_name, autofocus: true %>
        <%= "　" %>
        <%= f.text_field :first_name, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-2">フリガナ</div>
      <div class="col">
        <%= f.text_field :last_name_kana, autofocus: true %>
        <%= "　" %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-2">郵便番号</div>
      <div class="col">
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-2">住所</div>
      <div class="col">
        <%= f.text_field :address, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-2">電話番号</div>
      <div class="col">
        <%= f.text_field :telephone_number, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-2">メールアドレス</div>
      <div class="col">
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-md-2"></div>
      <div class="col">
        <%= f.submit "編集内容を保存", class:"btn btn-outline-success" %>
      </div>
      <div class="col">
        <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-outline-danger" %>
      </div>
    </div>

  <% end %>

</div>