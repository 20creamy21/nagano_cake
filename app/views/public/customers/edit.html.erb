<%= render 'public/public' %>

<h2>会員情報編集</h2>

<%= form_with model:@customer, local:true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <div>名前</div>
    <div class="field">
      <%= f.label :"(姓)" %><br />
      <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :"(名)" %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>
  </div>

  <div>
    <div>フリガナ</div>
    <div class="field">
      <%= f.label :"(セイ)" %><br />
      <%= f.text_field :last_name_kana, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :"(メイ)" %><br />
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"住所" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %><br />
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(６文字以上)" %>
    <% if @minimum_password_length %>
    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
  
  <!--<div>-->
  <!--  <%= f.submit "退会" %>-->
  <!--</div>-->
  
<% end %>