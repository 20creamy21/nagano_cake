<%= render 'public/public', customer:@customer %>

<div class="container mt-5">

  <h2 class="row">マイページ</h2>

  <div class="row mt-5">
    <h3 class="col-md-2">登録情報</h3>
    <div class="col h3"><%= link_to "編集する", customers_edit_path, class:"btn btn-outline-success" %></div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2">氏名</div>
    <div class="col"><%= @customer.last_name + @customer.first_name %></div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2">カナ</div>
    <div class="col"><%= @customer.last_name_kana + @customer.first_name_kana %></div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2">郵便番号</div>
    <div class="col"><%= @customer.postal_code %></div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2">住所</div>
    <div class="col"><%= @customer.address %></div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2">電話番号</div>
    <div class="col"><%= @customer.telephone_number %></div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2">メールアドレス</div>
    <div class="col"><%= @customer.email %></div>
  </div>

  <div class="row mt-5">
    <h3 class="col-md-2">注文履歴</h3>
    <div class="col h3"><%= link_to "一覧を見る", orders_path, class:"btn btn-outline-primary" %></div>
  </div>

</div>