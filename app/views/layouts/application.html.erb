<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <% if admin_signed_in? %>
        <ul>
          <li>
            <%= link_to "商品一覧", admin_items_path %>
          </li>
          <li>
            <%= link_to "会員一覧", admin_customers_path %>
          </li>
          <li>
            <%= link_to "商品履歴一覧", admin_root_path %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: 'delete' %>
          </li>
        </ul>
      <% else %>
        <ul>
          <li>
            <%= link_to "新規登録", new_admin_registration_path %>
          </li>
          <li>
            <%= link_to "ログイン", new_admin_session_path %>
          </li>
        </ul>
      <% end %>

      <% if customer_signed_in? %>
        <ul>
          <li>
            <%= link_to "Log out", destroy_customer_session_path, method: 'delete' %>
          </li>
          <li>
            <%= link_to "About", about_path %>
          </li>
        </ul>
      <% else %>
      <% end %>

    </header>

    <%= yield %>

  </body>

</html>
