<%= render 'public/public' %>

<div class="container mt-5">

  <h2 class="row">会員新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row mt-3">
      <div class="col-md-3">名前</div>
      <div class="field col-md-1">
        <%= f.label :"(姓)　" %>
      </div>
      <div class="col">
        <%= f.text_field :last_name, autofocus: true %>
      </div>
      <div class="field col-md-1">
        <%= f.label :"(名)　" %>
      </div>
      <div class="col">
        <%= f.text_field :first_name, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-3">フリガナ</div>
      <div class="field col-md-1">
        <%= f.label :"(セイ)" %>
      </div>
      <div class="col">
        <%= f.text_field :last_name_kana, autofocus: true %>
      </div>
      <div class="field col-md-1">
        <%= f.label :"(メイ)" %>
      </div>
      <div class="col">
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="field col-md-3">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-md-1"></div>
      <div class="col">
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="field col-md-3">
        <%= f.label :"郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-md-1"></div>
      <div class="col">
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="field col-md-3">
        <%= f.label :"住所" %>
      </div>
      <div class="col-md-1"></div>
      <div class="col">
        <%= f.text_field :address, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="field col-md-3">
        <%= f.label :"電話番号(ハイフンなし)" %>
      </div>
      <div class="col-md-1"></div>
      <div class="col">
        <%= f.text_field :telephone_number, autofocus: true %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="field col-md-3">
        <%= f.label :"パスワード(６文字以上)" %>
        <% if @minimum_password_length %>
        <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
        <% end %>
      </div>
      <div class="col-md-1"></div>
      <div class="col">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="field col-md-3">
        <%= f.label :"パスワード(確認用)" %>
      </div>
      <div class="col-md-1"></div>
      <div class="col">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-3"></div>
      <div class=col-md-1></div>
      <div class="actions col">
        <%= f.submit "新規登録", class:"btn btn-outline-success" %>
      </div>
    </div>
  <% end %>

  <!--<%= render "devise/shared/links" %>-->

  <h2 class="mt-5 row">既に登録済みの方</h2>
  <div class="row mt-3 ml-3">
    <div class="col-md-4">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>

</div>