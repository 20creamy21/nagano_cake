<%= render 'admin/admin' %>

<h1>商品詳細</h1>

<div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>商品名</th>
        <th>商品説明</th>
        <th>税込価格（税抜価格）</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= @item.name %></td>
          <td><%= @item.introduction %></td>
          <td><%= (@item.price*1.1).to_i %>円(<%= @item.price %>円)</td>
        </tr>
    </tbody>
  </table>
</div>

<button>
  <%= link_to "編集する", edit_admin_item_path(@item) %>
</button>