<%= render 'admin/admin' %>

<div class="container mt-5">

  <h2 class="row">商品一覧</h2>

  <div class="row mt-5">
    <table class="table table-striped col mr-5">
      <thead>
        <tr>
          <th class="text-center">商品ID</th>
          <th class="text-center">商品名</th>
          <th class="text-center">税抜価格</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td class="text-center"><%= item.id %></td>
            <td class="text-center"><%= link_to item.name, admin_item_path(item), class: "text-dark border-bottom border-dark" %></td>
            <td class="text-center"><%= item.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row mt-5">
    <%= link_to "商品新規登録", new_admin_item_path, class: "btn btn-outline-primary" %>
  </div>

</div>