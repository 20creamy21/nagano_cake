<h1>商品一覧ページ</h1>

<div>
  <table>
    <thead>
      <tr>
        <th>商品イメージ</th>
        <th>商品名</th>
        <th>商品説明</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<button>
  <%= link_to "商品新規登録", new_admin_item_path %>
</button>
