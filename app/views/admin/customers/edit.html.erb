<%= render 'admin/admin' %>

<div class="container mt-5">

 <h2 class="row">
   <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
 </h2>

 <div class="row mt-5">
  <label class="col-md-2">会員ID</label>
  <div class="col">
    <%= @customer.id %>
  </div>
 </div>

 <%= form_with model: @customer, url: admin_customer_path(@customer), local:true do |f| %>

   <div class="row mt-3">
    <label for="name" class="col-md-2">氏名</label>
    <div class="col">
     <%= f.text_field :last_name, autofocus: true, id:"name" %>
     <%= f.text_field :first_name, autofocus: true, id:"name" %>
    </div>
   </div>

   <div class="row mt-3">
    <label for="kana" class="col-md-2">フリガナ</label>
    <div class="col">
     <%= f.text_field :last_name_kana, autofocus: true, id:"kana" %>
     <%= f.text_field :first_name_kana, autofocus: true, id:"kana" %>
    </div>
   </div>

   <div class="row mt-3">
    <label for="postal_code" class="col-md-2">郵便番号</label>
    <div class="col">
     <%= f.text_field :postal_code, autofocus: true, id:"postal_code" %>
    </div>
   </div>

   <div class="row mt-3">
    <label for="address" class="col-md-2">住所</label>
    <div class="col">
     <%= f.text_field :address, autofocus: true, id:"address" %>
    </div>
   </div>

   <div class="row mt-3">
    <label for="telephone_number" class="col-md-2">電話番号</label>
    <div class="col">
     <%= f.text_field :telephone_number, autofocus: true, id:"telephone_number" %>
    </div>
   </div>

   <div class="row mt-3">
    <label for="email" class="col-md-2">メールアドレス</label>
    <div class="col">
     <%= f.email_field :email, autofocus: true, id:"email" %>
    </div>
   </div>

   <div class="row mt-3">
    <label for="is_active" class="col-md-2">会員ステータス</label>
    <div class="col">
     <% if @customer.is_active == true %>
      <%= f.radio_button :is_active, :true, checked: true %>
      <%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "退会" %>
     <% else %>
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, :false, checked: true %>
      <%= f.label :is_active, "退会" %>
     <% end %>
    </div>
   </div>

   <div class="row mt-5">
    <div class="col-md-2"></div>
    <div class="col">
     <%= f.submit "変更を保存", class:"btn btn-outline-success" %>
    </div>
   </div>

 <% end %>

</div>